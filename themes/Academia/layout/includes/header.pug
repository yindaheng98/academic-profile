.header_wrap
    #blog_name
        a#site-name.blog_title(href=url_for('/')) #[=config.title]
    button.menus_icon
        .navicon
    ul.menus_items
        each value, label in theme.menu
            li.menus_item
                a.site-page=' ' + trim(label.split('||')[0]) + ' '
                    i(class=trim(value.split('||')[1]) aria-hidden="true")
    ul.menus_items_right
        each value, label in theme.menu_right
            li.menus_item
                a.site-page=' ' + trim(label.split('||')[0]) + ' '
                    i(class=trim(value.split('||')[1]) aria-hidden="true")